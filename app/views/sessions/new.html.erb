
<h1>Sign in</h1>
<%= form_for(:session, url: log_in_path) do |f| %>

  <%= f.label :email %>
  <%= f.email_field :email %>
  <%= f.label :password %>
  <%= f.password_field :password %>
  <%= f.label :password_confirmation %>
  <%= f.password_field :password_confirmation %>
  <%= f.label :remember_me %>
  <%= f.check_box :remember_me %>
  <%= f.submit "Sign In" %>

<% end %>
<% if @email %>
  <%= "hello:" + @email %>
<% end %>
